<p id="notice"><%= notice %></p>

<h1>All Projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Root path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
            <%= link_to fa_icon("map-o"), 
                  project, 
                  class: "big-icon"
                  %>	
        </td>
        <td style="padding-top:17px !important;" class "project-link"><%= link_to project.name, project%></td>
        <td style="padding-top:17px !important;" class "project-link"><%= project.root_path %></td>
        <td><%= link_to 'Show', project, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
